public static boolean issorted(int i, int arr[] ){
        if(  i == arr.length-1){
            return true;
        }
        if ( arr[i]> arr[i+1]){
            return false;
        }
        
            return isorted (arr, i+1);
        


    }
    public static void main (String args[]){
        int arr[] = { 1,2,3,4,5};
       issorted(0, arr);
    } 
    
}
